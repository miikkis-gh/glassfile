# Glassmorphic File Manager - Nginx Reverse Proxy Configuration
#
# Installation:
#   1. Copy this file to /etc/nginx/sites-available/glassfile
#   2. Edit server_name to match your domain
#   3. Enable: ln -s /etc/nginx/sites-available/glassfile /etc/nginx/sites-enabled/
#   4. Test: nginx -t
#   5. Reload: systemctl reload nginx
#
# For SSL/HTTPS (recommended):
#   1. Install certbot: apt install certbot python3-certbot-nginx
#   2. Get certificate: certbot --nginx -d files.yourdomain.com
#   3. Certbot will automatically modify this config for HTTPS

# Rate limiting zone (prevents abuse)
limit_req_zone $binary_remote_addr zone=filemanager:10m rate=10r/s;

# Upstream server
upstream glassfile_backend {
    server 127.0.0.1:8080;
    keepalive 32;
}

server {
    listen 80;
    listen [::]:80;
    server_name files.yourdomain.com;  # CHANGE THIS to your domain

    # Redirect HTTP to HTTPS (uncomment after setting up SSL)
    # return 301 https://$server_name$request_uri;

    # Maximum upload size (match config.yaml max_file_size)
    client_max_body_size 100M;

    # Security headers
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-Frame-Options "DENY" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;

    # Gzip compression
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_proxied any;
    gzip_types text/plain text/css text/xml text/javascript application/javascript application/json application/xml;

    # Rate limiting for API endpoints
    location /api/ {
        limit_req zone=filemanager burst=20 nodelay;

        proxy_pass http://glassfile_backend;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Connection "";

        # Timeouts for uploads
        proxy_connect_timeout 60s;
        proxy_send_timeout 300s;
        proxy_read_timeout 300s;
    }

    # Public file downloads (no rate limit, allow caching)
    location /files/ {
        proxy_pass http://glassfile_backend;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Connection "";

        # Cache control for downloads
        proxy_cache_valid 200 1h;
        expires 1h;
        add_header Cache-Control "public, immutable";
    }

    # Main application
    location / {
        limit_req zone=filemanager burst=50 nodelay;

        proxy_pass http://glassfile_backend;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Connection "";
    }

    # Health check endpoint (for monitoring)
    location /health {
        proxy_pass http://glassfile_backend;
        proxy_http_version 1.1;
        access_log off;
    }

    # Deny access to hidden files
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }
}

